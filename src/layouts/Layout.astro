---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "../base.css"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent-gradient: linear-gradient(299deg, #ff3232, #9f018b, #00ccff);
  }
</style>
